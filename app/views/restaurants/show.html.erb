<p id="notice"> <%= notice %> </p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<h3>Reviews</h3>


<ul>
  <% @restaurant.reviews.each do |review| %>
  <li>
    <%= review.content %>
    <% link_to "Delete review", review_path(review), method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>
